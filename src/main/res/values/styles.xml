<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="CabinateTheme" parent="@android:style/Theme.Holo.Light">
    <item name="android:actionOverflowButtonStyle">@style/CabinateOverFlow</item>
    <item name="android:actionOverflowMenuStyle">@style/CabinateOverflowMenu</item>
    <item name="android:textAppearanceLargePopupMenu">@style/CabinatePopupTextAppearanceLarge</item>
    <item name="android:textAppearanceSmallPopupMenu">@style/CabinatePopupTextAppearanceSmall</item>
    <item name="android:listDivider">@null</item>
    <item name="android:listPreferredItemHeightSmall">28dip</item>
  </style>

  <style name="CabinateOverFlow" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
    <item name="android:src">@drawable/ic_more_vert_black_24dp</item>
  </style>

  <style name="CabinateOverflowMenu" parent="@android:style/Widget.Holo.Light.PopupMenu">
    <item name="android:dropDownVerticalOffset">-50dip</item>
  </style>

  <style name="CabinatePopupTextAppearanceLarge">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="CabinatePopupTextAppearanceSmall">
    <item name="android:textSize">10sp</item>
  </style>

  <style name="scrollbar_shape_style">
    <item name="android:scrollbarAlwaysDrawVerticalTrack">false</item>
    <item name="android:scrollbarStyle">outsideOverlay</item>
    <item name="android:scrollbars">vertical</item>
    <item name="android:fadeScrollbars">true</item>
    <item name="android:scrollbarThumbVertical">@drawable/scrollbar_vertical_thumb</item>
    <item name="android:scrollbarTrackVertical">@drawable/scrollbar_vertical_track</item>
    <item name="android:scrollbarSize">2dp</item>
    <item name="android:scrollbarFadeDuration">500</item>
    <item name="android:scrollbarDefaultDelayBeforeFade">0</item>
  </style>

</resources>
